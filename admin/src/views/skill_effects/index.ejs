<div class="page-header">
  <h1>スキル効果一覧</h1>
</div>

<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-content">
        <table class="striped responsive-table">
          <thead>
            <tr>
              <th>名前</th>
              <th>説明</th>
              <th>操作</th>
            </tr>
          </thead>
          <tbody>
            <% if (items.length === 0) { %>
              <tr>
                <td colspan="3" class="text-center">データがありません</td>
              </tr>
            <% } %>
            <% items.forEach(i => { %>
              <tr>
                <td><%= i.name %></td>
                <td><%= i.description %></td>
                <td>
                  <a href="/skill-effects/<%= i.id %>/edit" class="btn-small waves-effect waves-light blue">
                    <i class="material-icons">edit</i>
                  </a>
                  <form action="/skill-effects/<%= i.id %>/delete" method="post" style="display:inline; margin-left: 10px;">
                    <button type="submit" class="btn-small waves-effect waves-light red" onclick="return confirm('削除しますか？')">
                      <i class="material-icons">delete</i>
                    </button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<!-- 固定配置の新規登録ボタン -->
<a href="/skill-effects/new" class="btn-floating fab-new waves-effect waves-light green">
  <i class="material-icons">add</i>
</a>