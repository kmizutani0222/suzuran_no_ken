<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title !== 'undefined' ? title : '管理' %></title>
  <!-- Materialize CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  <!-- Material Icons -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/styles.css">
  <!-- Image Resizer CSS -->
  <link rel="stylesheet" href="/css/image-resizer.css">
</head>
<body>
  <% if (typeof user !== 'undefined' && user) { %>
  <nav class="light-green lighten-3">
    <div class="nav-wrapper container">
      <a href="/" class="brand-logo">鈴蘭の剣 管理</a>
      <a href="#" data-target="mobile-nav" class="sidenav-trigger"><i class="material-icons">menu</i></a>
      <ul class="right hide-on-med-and-down">
        <li><a class="dropdown-trigger" href="#!" data-target="basic-info-dropdown">基本情報<i class="material-icons right">arrow_drop_down</i></a></li>
        <li><a class="dropdown-trigger" href="#!" data-target="skills-dropdown">スキル管理<i class="material-icons right">arrow_drop_down</i></a></li>
        <li><a class="dropdown-trigger" href="#!" data-target="settings-dropdown">設定<i class="material-icons right">arrow_drop_down</i></a></li>
      </ul>
    </div>
  </nav>

  <!-- Basic Info Dropdown -->
  <ul id="basic-info-dropdown" class="dropdown-content">
    <li><a href="/characters">キャラ</a></li>
    <li><a href="/equipment">装備</a></li>
    <li><a href="/rarities">レアリティ</a></li>
    <li><a href="/roles">ロール</a></li>
    <li><a href="/factions">陣営</a></li>
  </ul>

  <!-- Skills Dropdown -->
  <ul id="skills-dropdown" class="dropdown-content">
    <li><a href="/skills">スキル</a></li>
    <li><a href="/personality-skills">個性スキル</a></li>
    <li><a href="/ex-skills">EXスキル</a></li>
    <li><a href="/skill-effects">スキル効果</a></li>
  </ul>

  <!-- Settings Dropdown -->
  <ul id="settings-dropdown" class="dropdown-content">
    <li><a href="/logout">ログアウト</a></li>
  </ul>

  <!-- Mobile Navigation -->
  <ul class="sidenav" id="mobile-nav">
    <li>
      <div class="collapsible-header">
        <i class="material-icons">info</i>基本情報
      </div>
      <div class="collapsible-body">
        <ul>
          <li><a href="/characters">キャラ</a></li>
          <li><a href="/equipment">装備</a></li>
          <li><a href="/rarities">レアリティ</a></li>
          <li><a href="/roles">ロール</a></li>
          <li><a href="/factions">陣営</a></li>
        </ul>
      </div>
    </li>
    <li>
      <div class="collapsible-header">
        <i class="material-icons">build</i>スキル管理
      </div>
      <div class="collapsible-body">
        <ul>
          <li><a href="/skills">スキル</a></li>
          <li><a href="/personality-skills">個性スキル</a></li>
          <li><a href="/ex-skills">EXスキル</a></li>
          <li><a href="/skill-effects">スキル効果</a></li>
        </ul>
      </div>
    </li>
    <li class="divider"></li>
    <li><a href="/logout">ログアウト</a></li>
  </ul>
  <% } %>

  <main class="container">
    <%- body %>
  </main>

  <!-- Materialize JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  <!-- Image Resizer JavaScript -->
  <script src="/js/image-resizer.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      M.AutoInit();
      
      // ドロップダウンメニューの初期化
      var dropdowns = document.querySelectorAll('.dropdown-trigger');
      M.Dropdown.init(dropdowns, {
        constrainWidth: false,
        coverTrigger: false,
        closeOnClick: true
      });
      
      // コラプシブルメニューの初期化
      var collapsibles = document.querySelectorAll('.collapsible');
      M.Collapsible.init(collapsibles);
      
      // ImageResizerインスタンスを作成
      window.imageResizer = new ImageResizer();
    });
  </script>
</body>
</html> 