<div class="page-header">
  <h1>タロット一覧</h1>
</div>

<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-content">
        <table class="striped responsive-table">
          <thead>
            <tr>
              <th>アイコン</th>
              <th>名前</th>
              <th>レアリティ</th>
              <th>操作</th>
            </tr>
          </thead>
          <tbody>
            <% if (tarots.length === 0) { %>
              <tr>
                <td colspan="4" class="text-center">データがありません</td>
              </tr>
            <% } else { %>
              <% tarots.forEach(function(tarot) { %>
                <tr>
                  <td>
                    <% if (tarot.icon) { %>
                      <img src="<%= tarot.icon %>" alt="<%= tarot.name %>" class="equipment-icon-small">
                    <% } else { %>
                      <span>なし</span>
                    <% } %>
                  </td>
                  <td><%= tarot.name %></td>
                  <td>
                    <% if (tarot.rarity) { %>
                      <span class="chip <%= tarot.rarity.name === 'SSR' ? 'amber' : tarot.rarity.name === 'SR' ? 'blue' : 'grey' %> white-text">
                        <%= tarot.rarity.name %>
                      </span>
                    <% } %>
                  </td>
                  <td>
                    <a href="/tarots/<%= tarot.id %>/edit" class="btn-small waves-effect waves-light blue">
                      <i class="material-icons">edit</i>
                    </a>
                    <form action="/tarots/<%= tarot.id %>?_method=DELETE" method="POST" style="display: inline; margin-left: 10px;">
                      <button type="submit" class="btn-small waves-effect waves-light red" 
                              onclick="return confirm('タロット「<%= tarot.name %>」を削除しますか？')">
                        <i class="material-icons">delete</i>
                      </button>
                    </form>
                  </td>
                </tr>
              <% }); %>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<!-- 固定配置の新規登録ボタン -->
<a href="/tarots/new" class="btn-floating fab-new waves-effect waves-light green">
  <i class="material-icons">add</i>
</a> 