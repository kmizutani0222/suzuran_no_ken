<div class="page-header">
  <h1>管理者ユーザー一覧</h1>
</div>

<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-content">
        <table class="striped responsive-table">
          <thead>
            <tr>
              <th>ユーザー名</th>
              <th>操作</th>
            </tr>
          </thead>
          <tbody>
            <% if (adminUsers.length === 0) { %>
              <tr>
                <td colspan="2" class="text-center">データがありません</td>
              </tr>
            <% } %>
            <% adminUsers.forEach(au => { %>
              <tr>
                <td><%= au.username %></td>
                <td>
                  <a href="/admin-users/<%= au.id %>/edit" class="btn-small waves-effect waves-light orange">
                    <i class="material-icons">edit</i>
                  </a>
                  <form action="/admin-users/<%= au.id %>/delete" method="post" style="display:inline; margin-left: 10px;">
                    <button type="submit" class="btn-small waves-effect waves-light red" onclick="return confirm('削除しますか？')">
                      <i class="material-icons">delete</i>
                    </button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<!-- 固定配置の新規登録ボタン -->
<a href="/admin-users/new" class="btn-floating fab-new waves-effect waves-light green">
  <i class="material-icons">add</i>
</a>