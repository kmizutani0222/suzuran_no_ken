<div class="page-header">
  <h1>レアリティ一覧</h1>
</div>

<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-content">
        <table class="striped responsive-table">
          <thead>
            <tr>
              <th>アイコン</th>
              <th>名前</th>
              <th>レア度</th>
              <th>操作</th>
            </tr>
          </thead>
          <tbody>
            <% if (items.length === 0) { %>
              <tr>
                <td colspan="4" class="text-center">データがありません</td>
              </tr>
            <% } %>
            <% items.forEach(r => { %>
              <tr>
                <td>
                  <div class="character-images">
                    <% if (r.icon) { %>
                      <div class="image-preview">
                        <img src="<%= r.icon %>" alt="アイコン" title="アイコン" />
                      </div>
                    <% } else { %>
                      <div class="no-image">
                        <span class="grey-text">画像なし</span>
                      </div>
                    <% } %>
                  </div>
                </td>
                <td><%= r.name %></td>
                <td><%= r.rarityValue %></td>
                <td>
                  <a href="/rarities/<%= r.id %>/edit" class="btn-small waves-effect waves-light blue">
                    <i class="material-icons">edit</i>
                  </a>
                  <form action="/rarities/<%= r.id %>/delete" method="post" style="display:inline; margin-left: 10px;">
                    <button type="submit" class="btn-small waves-effect waves-light red" onclick="return confirm('削除しますか？')">
                      <i class="material-icons">delete</i>
                    </button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<!-- 固定配置の新規登録ボタン -->
<a href="/rarities/new" class="btn-floating fab-new waves-effect waves-light green">
  <i class="material-icons">add</i>
</a>