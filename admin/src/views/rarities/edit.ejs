  <div class="page-header">
    <h1>レアリティ編集</h1>
  </div>

  <div class="row">
    <div class="col s12">
      <div class="card">
        <div class="card-content">
          <form action="/rarities/<%= rarity.id %>" method="post" enctype="multipart/form-data">
            <div class="row">
              <div class="input-field col s6">
                <input type="text" id="name" name="name" value="<%= rarity.name %>" required />
                <label for="name">名前</label>
              </div>
              <div class="input-field col s6">
                <input type="number" id="value" name="value" min="1" max="10" value="<%= rarity.value %>" required />
                <label for="value">レア度（1-10）</label>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
                <div class="file-input-wrapper">
                  <input type="file" name="icon" accept="image/*" onchange="imageResizer.handleImageUpload(this, 'icon')" />
                  <label for="icon" class="file-input-label">
                    <i class="material-icons">cloud_upload</i>
                    <span>アイコンを選択</span>
                  </label>
                </div>
                <% if (rarity.icon) { %>
                  <div class="current-image">
                    <p>現在のアイコン:</p>
                    <img src="<%= rarity.icon %>" alt="アイコン" style="max-width: 100px; max-height: 100px;" />
                  </div>
                <% } %>
                <img id="iconImg" class="preview-image" style="display: none;" />
                <%- imageResizer.createPreviewHTML('icon') %>
              </div>
            </div>

            <div class="row">
              <div class="col s12 text-center">
                <button type="submit" class="btn-large waves-effect waves-light blue">
                  <i class="material-icons left">update</i>更新
                </button>
              </div>
            </div>
          </form>

          <div class="row mt-20">
            <div class="col s12 text-center">
              <form action="/rarities/<%= rarity.id %>/delete" method="post" style="display: inline;">
                <button type="submit" class="btn-large waves-effect waves-light red" onclick="return confirm('削除しますか？')">
                  <i class="material-icons left">delete</i>削除
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

 