<div class="page-header">
  <h1>装備編集</h1>
</div>

<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-content">
        <form action="/equipment/<%= equipment.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
          <!-- 1行目: 名前 -->
          <div class="row">
            <div class="input-field col s12">
              <input id="name" name="name" type="text" value="<%= equipment.name %>" required>
              <label for="name">名前</label>
            </div>
          </div>

          <!-- 2行目: 左側にレアリティ・カテゴリー・武器種、右側にアイコン -->
          <div class="row">
            <div class="col s6">
              <div class="row">
                <div class="input-field col s12">
                  <select id="rarityId" name="rarityId">
                    <option value="">未選択</option>
                    <% rarities.forEach(function(r) { %>
                      <option value="<%= r.id %>" <%= r.id === equipment.rarityId ? 'selected' : '' %>><%= r.name %></option>
                    <% }); %>
                  </select>
                  <label for="rarityId">レアリティ（任意）</label>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s6">
                  <select id="category" name="category">
                    <option value="">未選択</option>
                    <option value="weapon" <%= equipment.category === 'weapon' ? 'selected' : '' %>>武器</option>
                    <option value="armor" <%= equipment.category === 'armor' ? 'selected' : '' %>>装具</option>
                  </select>
                  <label for="category">カテゴリー（任意）</label>
                </div>
                <div class="input-field col s6">
                  <select id="weaponType" name="weaponType">
                    <option value="">未選択</option>
                    <option value="sword" <%= equipment.weaponType === 'sword' ? 'selected' : '' %>>剣</option>
                    <option value="spear" <%= equipment.weaponType === 'spear' ? 'selected' : '' %>>槍</option>
                    <option value="axe" <%= equipment.weaponType === 'axe' ? 'selected' : '' %>>斧</option>
                    <option value="bow" <%= equipment.weaponType === 'bow' ? 'selected' : '' %>>弓</option>
                    <option value="staff" <%= equipment.weaponType === 'staff' ? 'selected' : '' %>>杖</option>
                  </select>
                  <label for="weaponType">武器種（任意）</label>
                </div>
              </div>
            </div>
            <div class="col s6">
              <div class="image-upload-section">
                <div class="image-preview-container">
                  <div id="icon-preview" class="image-preview-large">
                    <% if (equipment.icon && equipment.icon.trim() !== '') { %>
                      <img src="<%= equipment.icon %>" alt="現在のアイコン" style="max-width: 100%; max-height: 100%; object-fit: contain; border-radius: 4px;" />
                    <% } else { %>
                      <div class="no-image">
                        <i class="material-icons">image</i>
                        <span>画像が選択されていません</span>
                      </div>
                    <% } %>
                  </div>
                </div>
                <div class="image-controls">
                  <div class="file-input-wrapper">
                    <input type="file" name="icon" accept="image/*" onchange="imageResizer.handleImageUpload(this, 'icon')" />
                    <label for="icon" class="file-input-label">
                      <i class="material-icons">cloud_upload</i>
                      <span>アイコンを選択</span>
                    </label>
                  </div>
                  <button type="button" class="btn-small waves-effect waves-light grey reset-btn" onclick="resetIcon()">
                    <i class="material-icons">refresh</i>
                    リセット
                  </button>
                </div>
              </div>
            </div>
          </div>

          <!-- 装備スキル -->
          <div class="row">
            <div class="input-field col s12">
              <textarea id="equipmentSkill" name="equipmentSkill" class="materialize-textarea" rows="3"><%= equipment.equipmentSkill || '' %></textarea>
              <label for="equipmentSkill">装備スキル（任意）</label>
            </div>
          </div>

          <!-- 説明 -->
          <div class="row">
            <div class="input-field col s12">
              <textarea id="description" name="description" class="materialize-textarea" rows="3"><%= equipment.description || '' %></textarea>
              <label for="description">説明（任意）</label>
            </div>
          </div>

          <!-- 入手方法 -->
          <div class="row">
            <div class="col s12">
              <div class="form-section">
                <legend>入手方法（任意、複数選択）</legend>
                <div class="faction-selection">
                  <% 
                    let currentMethods = [];
                    if (equipment.acquisitionMethod && typeof equipment.acquisitionMethod === 'string') {
                      currentMethods = equipment.acquisitionMethod.split(',').map(m => m.trim());
                    }
                  %>
                  <label class="faction-checkbox">
                    <input type="checkbox" name="acquisitionMethod" value="神兵試練１" <%= currentMethods.includes('神兵試練１') ? 'checked' : '' %> />
                    <span>神兵試練１</span>
                  </label>
                  <label class="faction-checkbox">
                    <input type="checkbox" name="acquisitionMethod" value="神兵試練２" <%= currentMethods.includes('神兵試練２') ? 'checked' : '' %> />
                    <span>神兵試練２</span>
                  </label>
                  <label class="faction-checkbox">
                    <input type="checkbox" name="acquisitionMethod" value="神兵試練３" <%= currentMethods.includes('神兵試練３') ? 'checked' : '' %> />
                    <span>神兵試練３</span>
                  </label>
                </div>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col s12 center-align">
              <button type="submit" class="btn-large waves-effect waves-light blue">
                <i class="material-icons left">update</i>更新
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // カテゴリー変更時の処理を削除（連動しない）
  
  // フォーム送信時の処理
  const form = document.querySelector('form');
  if (form) {
    form.addEventListener('submit', function(e) {
      // 入手方法のチェックボックスが全て外されている場合、空文字列を送信
      const acquisitionMethodCheckboxes = form.querySelectorAll('input[name="acquisitionMethod"]:checked');
      if (acquisitionMethodCheckboxes.length === 0) {
        const hiddenInput = document.createElement('input');
        hiddenInput.type = 'hidden';
        hiddenInput.name = 'acquisitionMethod';
        hiddenInput.value = '';
        form.appendChild(hiddenInput);
      }
    });
  }
});

// アイコンリセット機能
function resetIcon() {
  const iconPreview = document.getElementById('icon-preview');
  const fileInput = document.querySelector('input[name="icon"]');
  
  if (iconPreview) {
    iconPreview.innerHTML = `
      <div class="no-image">
        <i class="material-icons">image</i>
        <span>画像が選択されていません</span>
      </div>
    `;
  }
  
  if (fileInput) {
    fileInput.value = '';
  }
  
  // アイコンをクリアするためのhidden inputを追加
  const form = document.querySelector('form');
  if (form) {
    // 既存のhidden inputを削除
    const existingHidden = form.querySelector('input[name="iconClear"]');
    if (existingHidden) {
      existingHidden.remove();
    }
    
    // 新しいhidden inputを追加
    const hiddenInput = document.createElement('input');
    hiddenInput.type = 'hidden';
    hiddenInput.name = 'iconClear';
    hiddenInput.value = 'true';
    form.appendChild(hiddenInput);
  }
}
</script> 