<div class="page-header">
  <h1>装備登録</h1>
</div>

<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-content">
        <form action="/equipment" method="POST" enctype="multipart/form-data">
          <!-- 1行目: 名前 -->
          <div class="row">
            <div class="input-field col s12">
              <input id="name" name="name" type="text" required>
              <label for="name">名前</label>
            </div>
          </div>

          <!-- 2行目: 左側にレアリティ・カテゴリー・武器種、右側にアイコン -->
          <div class="row">
            <div class="col s6">
              <div class="row">
                <div class="input-field col s12">
                  <select id="rarityId" name="rarityId">
                    <option value="">未選択</option>
                    <% rarities.forEach(function(r) { %>
                      <option value="<%= r.id %>"><%= r.name %></option>
                    <% }); %>
                  </select>
                  <label for="rarityId">レアリティ（任意）</label>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s6">
                  <select id="category" name="category">
                    <option value="">未選択</option>
                    <option value="weapon">武器</option>
                    <option value="armor">装具</option>
                  </select>
                  <label for="category">カテゴリー（任意）</label>
                </div>
                <div class="input-field col s6">
                  <select id="weaponType" name="weaponType">
                    <option value="">未選択</option>
                    <option value="sword">剣</option>
                    <option value="spear">槍</option>
                    <option value="axe">斧</option>
                    <option value="bow">弓</option>
                    <option value="staff">杖</option>
                  </select>
                  <label for="weaponType">武器種（任意）</label>
                </div>
              </div>
            </div>
            <div class="col s6">
                              <h6 class="image-section-title">アイコン</h6>
                <div class="image-preview-container">
                  <div id="icon-preview" class="image-preview-large clickable-preview" onclick="selectIcon()">
                    <div class="no-image">
                      <i class="material-icons">image</i>
                      <span>画像が選択されていません</span>
                    </div>
                  </div>
                </div>
                <div class="image-controls">
                  <div class="file-input-wrapper">
                    <input type="file" name="icon" accept="image/*" onchange="imageResizer.handleImageUpload(this, 'icon')" id="icon-file-input" style="display: none;" />
                  </div>
                </div>
            </div>
          </div>

          <!-- 装備スキル -->
          <div class="row">
            <div class="input-field col s12">
              <textarea id="equipmentSkill" name="equipmentSkill" class="materialize-textarea" rows="3"></textarea>
              <label for="equipmentSkill">装備スキル（任意）</label>
            </div>
          </div>

          <!-- 説明 -->
          <div class="row">
            <div class="input-field col s12">
              <textarea id="description" name="description" class="materialize-textarea" rows="3"></textarea>
              <label for="description">説明（任意）</label>
            </div>
          </div>

          <!-- 入手方法 -->
          <div class="row">
            <div class="col s12">
              <div class="form-section">
                <legend>入手方法（任意、複数選択）</legend>
                <div class="faction-selection">
                  <label class="faction-checkbox">
                    <input type="checkbox" name="acquisitionMethod" value="神兵試練１" />
                    <span>神兵試練１</span>
                  </label>
                  <label class="faction-checkbox">
                    <input type="checkbox" name="acquisitionMethod" value="神兵試練２" />
                    <span>神兵試練２</span>
                  </label>
                  <label class="faction-checkbox">
                    <input type="checkbox" name="acquisitionMethod" value="神兵試練３" />
                    <span>神兵試練３</span>
                  </label>
                </div>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col s12 text-center">
              <button type="submit" class="btn-large waves-effect waves-light blue">
                <i class="material-icons left">save</i>登録
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // ファイル入力の変更を監視してプレビューを更新
  const fileInput = document.getElementById('icon-file-input');
  if (fileInput) {
    fileInput.addEventListener('change', handleFileChange);
  }
  
  // フォーム送信時の処理
  const form = document.querySelector('form');
  if (form) {
    form.addEventListener('submit', function(e) {
      // 入手方法のチェックボックスが全て外されている場合、空文字列を送信
      const acquisitionMethodCheckboxes = form.querySelectorAll('input[name="acquisitionMethod"]:checked');
      if (acquisitionMethodCheckboxes.length === 0) {
        const hiddenInput = document.createElement('input');
        hiddenInput.type = 'hidden';
        hiddenInput.name = 'acquisitionMethod';
        hiddenInput.value = '';
        form.appendChild(hiddenInput);
      }
    });
  }
});

// アイコン選択機能
function selectIcon() {
  document.getElementById('icon-file-input').click();
}

// ファイル入力の変更を監視してプレビューを更新
function handleFileChange(e) {
  if (e.target.files && e.target.files[0]) {
    const file = e.target.files[0];
    const reader = new FileReader();
    reader.onload = function(e) {
      const iconPreview = document.getElementById('icon-preview');
      if (iconPreview) {
        iconPreview.innerHTML = `
          <img src="${e.target.result}" alt="選択されたアイコン" />
          <button type="button" class="remove-icon-btn" onclick="event.stopPropagation(); resetIcon()">
            <i class="material-icons">close</i>
          </button>
        `;
        // 画像選択後はクリック不可にする
        iconPreview.classList.remove('clickable-preview');
        iconPreview.onclick = null;
      }
    };
    reader.readAsDataURL(file);
  }
}

// アイコンリセット機能
function resetIcon() {
  const iconPreview = document.getElementById('icon-preview');
  const fileInput = document.getElementById('icon-file-input');
  
  if (iconPreview) {
    // プレビューを完全にクリア
    iconPreview.innerHTML = `
      <div class="no-image">
        <i class="material-icons">image</i>
        <span>画像が選択されていません</span>
      </div>
    `;
    // クリック可能にする
    iconPreview.classList.add('clickable-preview');
    iconPreview.onclick = selectIcon;
    
    // すべての×ボタンを確実に削除
    const removeButtons = iconPreview.querySelectorAll('.remove-icon-btn');
    removeButtons.forEach(btn => btn.remove());
  }
  
  if (fileInput) {
    fileInput.value = '';
  }
}
</script> 