<div class="page-header">
  <h1>EXスキル一覧</h1>
</div>

<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-content">
        <table class="striped responsive-table">
          <thead>
            <tr>
              <th>アイコン</th>
              <th>名前</th>
              <th>操作</th>
            </tr>
          </thead>
          <tbody>
            <% if (exSkills.length === 0) { %>
              <tr>
                <td colspan="3" class="text-center">データがありません</td>
              </tr>
            <% } %>
            <% exSkills.forEach(function(exSkill) { %>
              <tr>
                <td>
                  <% if (exSkill.icon) { %>
                    <img src="/uploads/<%= exSkill.icon %>" alt="<%= exSkill.name %>" style="width: 50px; height: 50px; object-fit: cover;">
                  <% } else { %>
                    <span>なし</span>
                  <% } %>
                </td>
                <td><%= exSkill.name %></td>
                <td>
                  <a href="/ex-skills/<%= exSkill.id %>/edit" class="btn-small waves-effect waves-light blue">
                    <i class="material-icons">edit</i>
                  </a>
                  <form action="/ex-skills/<%= exSkill.id %>?_method=DELETE" method="POST" style="display: inline;">
                    <button type="submit" class="btn-small waves-effect waves-light red" onclick="return confirm('本当に削除しますか？')">
                      <i class="material-icons">delete</i>
                    </button>
                  </form>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<!-- 固定配置の新規登録ボタン -->
<a href="/ex-skills/new" class="btn-floating fab-new waves-effect waves-light green">
  <i class="material-icons">add</i>
</a> 