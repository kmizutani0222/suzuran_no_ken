  <div class="page-header">
    <h1>スキル登録</h1>
  </div>

  <div class="row">
    <div class="col s12">
      <div class="card">
        <div class="card-content">
          <form action="/skills" method="post" enctype="multipart/form-data">
            <div class="row">
              <div class="input-field col s12">
                <input type="text" id="name" name="name" required />
                <label for="name">名前</label>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s6">
                <div class="file-input-wrapper">
                  <input type="file" name="icon" accept="image/*" onchange="imageResizer.handleImageUpload(this, 'icon')" />
                  <label for="icon" class="file-input-label">
                    <i class="material-icons">cloud_upload</i>
                    <span>アイコンを選択</span>
                  </label>
                </div>
                <%- imageResizer.createPreviewHTML('icon') %>
              </div>
              <div class="input-field col s6">
                <input type="number" id="cost" name="cost" min="0" />
                <label for="cost">コスト</label>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s6">
                <input type="number" id="ct" name="ct" min="0" />
                <label for="ct">CT</label>
              </div>
              <div class="input-field col s6">
                <select name="skillType" required>
                  <option value="">選択してください</option>
                  <option value="パッシブ">パッシブ</option>
                  <option value="アクティブ">アクティブ</option>
                  <option value="即時">即時</option>
                  <option value="オーラ">オーラ</option>
                  <option value="通常攻撃">通常攻撃</option>
                  <option value="リアクション">リアクション</option>
                </select>
                <label>スキルタイプ</label>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s6">
                <select name="skillCategory" required>
                  <option value="">選択してください</option>
                  <option value="個性">個性</option>
                  <option value="EX">EX</option>
                  <option value="通常">通常</option>
                </select>
                <label>スキルカテゴリー</label>
              </div>
              <div class="input-field col s6">
                <select name="targets" multiple>
                  <option value="対ユニット">対ユニット</option>
                  <option value="対地面">対地面</option>
                  <option value="近接">近接</option>
                  <option value="範囲攻撃">範囲攻撃</option>
                </select>
                <label>スキルターゲット（複数選択）</label>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
                <textarea id="description" name="description" class="materialize-textarea" rows="3"></textarea>
                <label for="description">説明</label>
              </div>
            </div>

            <div class="row">
              <div class="col s12">
                <label>スキル効果（複数選択）:</label>
                <div class="mt-20">
                  <% skillEffects.forEach(e => { %>
                    <label class="mr-20">
                      <input type="checkbox" name="effectIds" value="<%= e.id %>" />
                      <span><%= e.name %></span>
                    </label>
                  <% }) %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col s12">
                <label>射程・範囲（未指定のものはフロントでは非表示）:</label>
                <div class="row">
                  <div class="input-field col s6">
                    <input type="number" id="rangeFrom" name="rangeFrom" min="0" />
                    <label for="rangeFrom">射程 From</label>
                  </div>
                  <div class="input-field col s6">
                    <input type="number" id="rangeTo" name="rangeTo" min="0" />
                    <label for="rangeTo">射程 To</label>
                  </div>
                </div>
                <div class="row">
                  <div class="input-field col s6">
                    <input type="number" id="rangeHeightFrom" name="rangeHeightFrom" />
                    <label for="rangeHeightFrom">射程高低差 From</label>
                  </div>
                  <div class="input-field col s6">
                    <input type="number" id="rangeHeightTo" name="rangeHeightTo" />
                    <label for="rangeHeightTo">射程高低差 To</label>
                  </div>
                </div>
                <div class="row">
                  <div class="input-field col s6">
                    <input type="number" id="areaHeightFrom" name="areaHeightFrom" />
                    <label for="areaHeightFrom">範囲高低差 From</label>
                  </div>
                  <div class="input-field col s6">
                    <input type="number" id="areaHeightTo" name="areaHeightTo" />
                    <label for="areaHeightTo">範囲高低差 To</label>
                  </div>
                </div>
                <div class="input-field">
                  <div class="file-input-wrapper">
                    <input type="file" name="range" accept="image/*" onchange="imageResizer.handleImageUpload(this, 'range')" />
                    <label for="range" class="file-input-label">
                      <i class="material-icons">cloud_upload</i>
                      <span>範囲画像を選択</span>
                    </label>
                  </div>
                  <%- imageResizer.createPreviewHTML('range') %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col s12 text-center">
                <button type="submit" class="btn-large waves-effect waves-light blue">
                  <i class="material-icons left">save</i>保存
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <p><a href="/skills">一覧に戻る</a></p> 