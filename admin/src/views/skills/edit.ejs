  <div class="page-header">
    <h1>スキル編集</h1>
  </div>

  <div class="row">
    <div class="col s12">
      <div class="card">
        <div class="card-content">
          <form action="/skills/<%= skill.id %>" method="post" enctype="multipart/form-data">
            <!-- 1行目: 名前(50%)、CT(25%)、コスト(25%) -->
            <div class="row">
              <div class="input-field col s6">
                <input type="text" id="name" name="name" value="<%= skill.name %>" required />
                <label for="name">名前</label>
              </div>
              <div class="input-field col s3">
                <input type="number" id="ct" name="ct" min="0" value="<%= skill.ct || '' %>" />
                <label for="ct">CT</label>
              </div>
              <div class="input-field col s3">
                <input type="number" id="cost" name="cost" min="0" value="<%= skill.cost || '' %>" />
                <label for="cost">コスト</label>
              </div>
            </div>

            <!-- 2行目以降: 左側にスキルカテゴリー・スキルタイプ、右側にアイコン -->
            <div class="row">
              <div class="col s6">
                <div class="row">
                  <div class="input-field col s12">
                    <select name="skillCategory" required>
                      <option value="">選択してください</option>
                      <option value="個性" <%= skill.skillCategory === '個性' ? 'selected' : '' %>>個性</option>
                      <option value="EX" <%= skill.skillCategory === 'EX' ? 'selected' : '' %>>EX</option>
                      <option value="通常" <%= skill.skillCategory === '通常' ? 'selected' : '' %>>通常</option>
                    </select>
                    <label>スキルカテゴリー</label>
                  </div>
                </div>
                <div class="row">
                  <div class="input-field col s12">
                    <select name="skillType" required>
                      <option value="">選択してください</option>
                      <option value="パッシブ" <%= skill.skillType === 'パッシブ' ? 'selected' : '' %>>パッシブ</option>
                      <option value="アクティブ" <%= skill.skillType === 'アクティブ' ? 'selected' : '' %>>アクティブ</option>
                      <option value="即時" <%= skill.skillType === '即時' ? 'selected' : '' %>>即時</option>
                      <option value="オーラ" <%= skill.skillType === 'オーラ' ? 'selected' : '' %>>オーラ</option>
                      <option value="通常攻撃" <%= skill.skillType === '通常攻撃' ? 'selected' : '' %>>通常攻撃</option>
                      <option value="リアクション" <%= skill.skillType === 'リアクション' ? 'selected' : '' %>>リアクション</option>
                    </select>
                    <label>スキルタイプ</label>
                  </div>
                </div>
              </div>
              <div class="col s6">
                <div class="image-upload-section">
                  <div class="image-preview-container">
                    <div id="icon-preview" class="image-preview-large">
                      <% if (skill.icon) { %>
                        <img src="<%= skill.icon %>" alt="アイコン" style="max-width: 100%; max-height: 100%; object-fit: contain; border-radius: 4px;" />
                      <% } else { %>
                        <div class="no-image">
                          <i class="material-icons">image</i>
                          <span>画像が選択されていません</span>
                        </div>
                      <% } %>
                    </div>
                  </div>
                  <div class="image-controls">
                    <div class="file-input-wrapper">
                      <input type="file" name="icon" accept="image/*" onchange="imageResizer.handleImageUpload(this, 'icon')" />
                      <label for="icon" class="file-input-label">
                        <i class="material-icons">cloud_upload</i>
                        <span>アイコンを選択</span>
                      </label>
                    </div>
                    <button type="button" class="btn-small waves-effect waves-light grey reset-btn" onclick="imageResizer.resetImage('icon')">
                      <i class="material-icons">refresh</i>
                      リセット
                    </button>
                  </div>
                </div>
              </div>
            </div>

            <!-- 説明を1行 -->
            <div class="row">
              <div class="input-field col s12">
                <textarea id="description" name="description" class="materialize-textarea" rows="3"><%= skill.description || '' %></textarea>
                <label for="description">説明</label>
              </div>
            </div>

            <!-- スキル効果 -->
            <div class="row">
              <div class="col s12">
                <label>スキル効果（複数選択）:</label>
                <div class="mt-20">
                  <% skillEffects.forEach(e => { %>
                    <label class="mr-20">
                      <input type="checkbox" name="effectIds" value="<%= e.id %>" <%= (skill.effectIds || []).includes(e.id) ? 'checked' : '' %> />
                      <span><%= e.name %></span>
                    </label>
                  <% }) %>
                </div>
              </div>
            </div>

            <!-- 射程・範囲の1行目: スキルターゲット -->
            <div class="row">
              <div class="col s12">
                <label>射程・範囲（未指定のものはフロントでは非表示）:</label>
                <div class="mt-20">
                  <label class="mr-20">
                    <input type="checkbox" name="targets" value="対ユニット" <%= (skill.targets || []).includes('対ユニット') ? 'checked' : '' %> />
                    <span>対ユニット</span>
                  </label>
                  <label class="mr-20">
                    <input type="checkbox" name="targets" value="対地面" <%= (skill.targets || []).includes('対地面') ? 'checked' : '' %> />
                    <span>対地面</span>
                  </label>
                  <label class="mr-20">
                    <input type="checkbox" name="targets" value="近接" <%= (skill.targets || []).includes('近接') ? 'checked' : '' %> />
                    <span>近接</span>
                  </label>
                  <label class="mr-20">
                    <input type="checkbox" name="targets" value="範囲攻撃" <%= (skill.targets || []).includes('範囲攻撃') ? 'checked' : '' %> />
                    <span>範囲攻撃</span>
                  </label>
                </div>
              </div>
            </div>

            <!-- 射程・範囲の2行目以降: 左側に範囲画像、右側に射程from-to -->
            <div class="row">
              <div class="col s6">
                <div class="image-upload-section">
                  <div class="image-preview-container">
                    <div id="range-preview" class="image-preview-large">
                      <% if (skill.range?.image) { %>
                        <img src="<%= skill.range.image %>" alt="範囲画像" style="max-width: 100%; max-height: 100%; object-fit: contain; border-radius: 4px;" />
                      <% } else { %>
                        <div class="no-image">
                          <i class="material-icons">image</i>
                          <span>画像が選択されていません</span>
                        </div>
                      <% } %>
                    </div>
                  </div>
                  <div class="image-controls">
                    <div class="file-input-wrapper">
                      <input type="file" name="range" accept="image/*" onchange="imageResizer.handleImageUpload(this, 'range')" />
                      <label for="range" class="file-input-label">
                        <i class="material-icons">cloud_upload</i>
                        <span>範囲画像を選択</span>
                      </label>
                    </div>
                    <button type="button" class="btn-small waves-effect waves-light grey reset-btn" onclick="imageResizer.resetImage('range')">
                      <i class="material-icons">refresh</i>
                      リセット
                    </button>
                  </div>
                </div>
              </div>
              <div class="col s6">
                <div class="row">
                  <div class="input-field col s6">
                    <input type="number" id="rangeFrom" name="rangeFrom" min="0" value="<%= skill.range?.from || '' %>" />
                    <label for="rangeFrom">射程 From</label>
                  </div>
                  <div class="input-field col s6">
                    <input type="number" id="rangeTo" name="rangeTo" min="0" value="<%= skill.range?.to || '' %>" />
                    <label for="rangeTo">射程 To</label>
                  </div>
                </div>
                <div class="row">
                  <div class="input-field col s6">
                    <input type="number" id="rangeHeightFrom" name="rangeHeightFrom" value="<%= skill.range?.heightFrom || '' %>" />
                    <label for="rangeHeightFrom">射程高低差 From</label>
                  </div>
                  <div class="input-field col s6">
                    <input type="number" id="rangeHeightTo" name="rangeHeightTo" value="<%= skill.range?.heightTo || '' %>" />
                    <label for="rangeHeightTo">射程高低差 To</label>
                  </div>
                </div>
                <div class="row">
                  <div class="input-field col s6">
                    <input type="number" id="areaHeightFrom" name="areaHeightFrom" value="<%= skill.range?.areaHeightFrom || '' %>" />
                    <label for="areaHeightFrom">範囲高低差 From</label>
                  </div>
                  <div class="input-field col s6">
                    <input type="number" id="areaHeightTo" name="areaHeightTo" value="<%= skill.range?.areaTo || '' %>" />
                    <label for="areaHeightTo">範囲高低差 To</label>
                  </div>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col s12 text-center">
                <button type="submit" class="btn-large waves-effect waves-light blue">
                  <i class="material-icons left">update</i>更新
                </button>
              </div>
            </div>
          </form>

          <div class="row mt-20">
            <div class="col s12 text-center">
              <form action="/skills/<%= skill.id %>/delete" method="post" style="display: inline;">
                <button type="submit" class="btn-large waves-effect waves-light red" onclick="return confirm('削除しますか？')">
                  <i class="material-icons left">delete</i>削除
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <p><a href="/skills">一覧に戻る</a></p> 