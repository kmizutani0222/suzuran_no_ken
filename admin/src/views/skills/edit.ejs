<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>管理 - スキル編集</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <div class="page-header">
    <h1>スキル編集</h1>
  </div>

  <div class="row">
    <div class="col s12">
      <div class="card">
        <div class="card-content">
          <form action="/skills/<%= item.id %>" method="post" enctype="multipart/form-data">
            <div class="row">
              <div class="input-field col s12">
                <input type="text" id="name" name="name" value="<%= item.name %>" required />
                <label for="name">名前</label>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
                <div class="file-field input-field">
                  <div class="btn blue">
                    <span>アイコン</span>
                    <input type="file" name="icon" accept="image/*" />
                  </div>
                  <div class="file-path-wrapper">
                    <input class="file-path validate" type="text" placeholder="画像を選択してください" />
                  </div>
                </div>
                <% if (item.icon) { %>
                  <div class="image-preview">
                    <p>現在のアイコン:</p>
                    <img src="<%= item.icon %>" alt="現在のアイコン" style="max-width: 100px; max-height: 100px;" />
                  </div>
                <% } %>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s6">
                <select name="skillType">
                  <% ["パッシブ","アクティブ","即時","オーラ","通常攻撃","リアクション"].forEach(t => { %>
                    <option value="<%= t %>" <%= item.skillType === t ? 'selected' : '' %>><%= t %></option>
                  <% }) %>
                </select>
                <label>スキルタイプ</label>
              </div>
              <div class="input-field col s6">
                <select name="skillCategory">
                  <% ["個性","EX","通常"].forEach(c => { %>
                    <option value="<%= c %>" <%= item.skillCategory === c ? 'selected' : '' %>><%= c %></option>
                  <% }) %>
                </select>
                <label>スキルカテゴリー</label>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s6">
                <input type="number" id="cost" name="cost" min="0" value="<%= item.cost %>" required />
                <label for="cost">コスト</label>
              </div>
              <div class="input-field col s6">
                <input type="number" id="ct" name="ct" min="0" value="<%= item.ct %>" required />
                <label for="ct">CT</label>
              </div>
            </div>

            <div class="form-section">
              <legend>スキルターゲット（複数選択）</legend>
              <div class="row">
                <% ["対ユニット","対地面","近接","範囲攻撃"].forEach(t => { %>
                  <div class="col s6">
                    <label>
                      <input type="checkbox" name="targets" value="<%= t %>" <%= (item.targets || []).includes(t) ? 'checked' : '' %> />
                      <span><%= t %></span>
                    </label>
                  </div>
                <% }) %>
              </div>
            </div>

            <div class="form-section">
              <legend>スキル効果（複数選択）</legend>
              <div class="input-field">
                <select name="effectIds" multiple>
                  <% skillEffects.forEach(e => { %>
                    <option value="<%= e.id %>" <%= (item.effectIds || []).includes(e.id) ? 'selected' : '' %>><%= e.name %></option>
                  <% }) %>
                </select>
                <label>スキル効果</label>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
                <textarea id="description" name="description" class="materialize-textarea" rows="6" required><%= item.description %></textarea>
                <label for="description">説明</label>
              </div>
            </div>

            <div class="row">
              <div class="col s12 text-center">
                <button type="submit" class="btn-large waves-effect waves-light blue">
                  <i class="material-icons left">update</i>更新
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col s12 text-center">
      <a href="/skills" class="btn waves-effect waves-light grey">
        <i class="material-icons left">arrow_back</i>一覧に戻る
      </a>
    </div>
  </div>
</body>
</html> 