<div class="page-header">
  <h1>スキル一覧</h1>
</div>

<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-content">
        <table class="striped responsive-table">
          <thead>
            <tr>
              <th>アイコン</th>
              <th>名前</th>
              <th>コスト</th>
              <th>CT</th>
              <th>スキルタイプ</th>
              <th>対象</th>
              <th>説明</th>
              <th>操作</th>
            </tr>
          </thead>
          <tbody>
            <% if (skills.length === 0) { %>
              <tr>
                <td colspan="7" class="text-center">データがありません</td>
              </tr>
            <% } %>
            <% skills.forEach(function(s) { %>
              <tr>
                <td>
                  <% if (s.icon) { %>
                    <img src="/uploads/<%= s.icon %>" alt="<%= s.name %>" style="width: 50px; height: 50px; object-fit: cover;">
                  <% } else { %>
                    <span>なし</span>
                  <% } %>
                </td>
                <td><%= s.name %></td>
                <td><%= s.cost %></td>
                <td><%= s.ct %></td>
                <td><%= s.skillType %></td>
                <td><%= s.targets ? s.targets.join(', ') : 'なし' %></td>
                <td><%= s.description %></td>
                <td>
                  <a href="/skills/<%= s.id %>/edit" class="btn-small waves-effect waves-light blue">
                    <i class="material-icons">edit</i>
                  </a>
                  <form action="/skills/<%= s.id %>?_method=DELETE" method="POST" style="display: inline; margin-left: 10px;">
                    <button type="submit" class="btn-small waves-effect waves-light red" onclick="return confirm('本当に削除しますか？')">
                      <i class="material-icons">delete</i>
                    </button>
                  </form>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<!-- 固定配置の新規登録ボタン -->
<a href="/skills/new" class="btn-floating fab-new waves-effect waves-light green">
  <i class="material-icons">add</i>
</a>