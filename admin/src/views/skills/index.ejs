<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>管理 - スキル一覧</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  <link rel="stylesheet" href="/css/list-pages.css">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
  <div class="container">
    <div class="row valign-wrapper">
      <div class="col s8">
        <h1 class="page-title">スキル一覧</h1>
      </div>
      <div class="col s4 right-align">
        <a href="/skills/new" class="btn-large waves-effect waves-light green">
          <i class="material-icons left">add</i>
          新規登録
        </a>
      </div>
    </div>

    <div class="card">
      <div class="card-content">
            <table class="striped responsive-table">
              <thead>
                <tr>
                  <th>アイコン</th>
                  <th>名前</th>
                  <th>カテゴリー</th>
                  <th>タイプ</th>
                  <th>操作</th>
                </tr>
              </thead>
              <tbody>
                <% if (skills.length === 0) { %>
                  <tr>
                    <td colspan="5" class="text-center">データがありません</td></tr>
                <% } %>
                <% skills.forEach(s => { %>
                  <tr>
                    <td>
                      <% if (s.icon) { %>
                        <img src="<%= s.icon %>" alt="<%= s.name %>" style="max-width: 40px; max-height: 40px;" />
                      <% } else { %>
                        <span class="no-image">画像なし</span>
                      <% } %>
                    </td>
                    <td><%= s.name %></td>
                    <td><%= s.skillCategory %></td>
                    <td><%= s.skillType %></td>
                    <td>
                      <a href="/skills/<%= s.id %>/edit" class="btn-small waves-effect waves-light orange">
                        <i class="material-icons">edit</i>
                      </a>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      M.AutoInit();
    });
  </script>
</body>
</html> 