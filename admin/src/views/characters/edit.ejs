  <div class="page-header">
    <h1>キャラ編集</h1>
  </div>

  <div class="row">
    <div class="col s12">
      <div class="card">
        <div class="card-content">
          <form action="/characters/<%= character.id %>" method="post" enctype="multipart/form-data">
            <div class="row">
              <div class="input-field col s6">
                <input type="text" id="name" name="name" value="<%= character.name %>" required />
                <label for="name">名前</label>
              </div>
              <div class="input-field col s6">
                <select name="rarityId">
                  <% rarities.forEach(r => { %>
                    <option value="<%= r.id %>" <%= character.rarityId === r.id ? 'selected' : '' %>><%= r.name %> (★<%= r.value %>)</option>
                  <% }) %>
                </select>
                <label>レアリティ</label>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s6">
                <select name="roleId">
                  <% roles.forEach(r => { %>
                    <option value="<%= r.id %>" <%= character.roleId === r.id ? 'selected' : '' %>><%= r.name %></option>
                  <% }) %>
                </select>
                <label>ロール</label>
              </div>
              <div class="input-field col s6">
                <select name="weaponType">
                  <% ["剣","槍","斧","杖","弓"].forEach(w => { %>
                    <option value="<%= w %>" <%= character.weaponType === w ? 'selected' : '' %>><%= w %></option>
                  <% }) %>
                </select>
                <label>武器種</label>
              </div>
            </div>

            <div class="row">
              <div class="col s12">
                <div class="form-section">
                  <legend>陣営（複数選択可）</legend>
                  <div class="faction-selection">
                    <% factions.forEach(f => { %>
                      <label class="faction-checkbox">
                        <input type="checkbox" name="factionIds" value="<%= f.id %>" <%= character.factionIds.includes(f.id) ? 'checked' : '' %> />
                        <span><%= f.name %></span>
                      </label>
                    <% }) %>
                  </div>
                </div>
              </div>
            </div>

            <div class="form-section">
              <legend>外見画像</legend>
              <div class="row">
                <div class="input-field col s6">
                  <div class="file-input-wrapper">
                    <input type="file" name="normalAppearance" accept="image/*" onchange="imageResizer.handleImageUpload(this, 'normalAppearance')" />
                    <label for="normalAppearance" class="file-input-label">
                      <i class="material-icons">cloud_upload</i>
                      <span>通常外見を選択</span>
                    </label>
                  </div>
                  <% if (character.normalAppearance) { %>
                    <div class="current-image">
                      <p>現在の画像:</p>
                      <img src="<%= character.normalAppearance %>" alt="通常外見" style="max-width: 100px; max-height: 100px;" />
                    </div>
                  <% } %>
                  <div id="normalAppearance-preview" class="image-preview"></div>
                </div>
                <div class="input-field col s6">
                  <div class="file-input-wrapper">
                    <input type="file" name="pixelAvatar" accept="image/*" onchange="imageResizer.handleImageUpload(this, 'pixelAvatar')" />
                    <label for="pixelAvatar" class="file-input-label">
                      <i class="material-icons">cloud_upload</i>
                      <span>ピクセルアバターを選択</span>
                    </label>
                  </div>
                  <% if (character.pixelAvatar) { %>
                    <div class="current-image">
                      <p>現在の画像:</p>
                      <img src="<%= character.pixelAvatar %>" alt="ピクセルアバター" style="max-width: 100px; max-height: 100px;" />
                    </div>
                  <% } %>
                  <div id="pixelAvatar-preview" class="image-preview"></div>
                </div>
              </div>
            </div>

            <div class="form-section">
              <legend>個性スキル</legend>
              <div class="input-field">
                <select name="personalitySkillId">
                  <option value="">未設定</option>
                  <% personalitySkills.forEach(s => { %>
                    <option value="<%= s.id %>" <%= character.personalitySkillId === s.id ? 'selected' : '' %>><%= s.name %></option>
                  <% }) %>
                </select>
                <label>個性スキル</label>
              </div>
            </div>

            <div class="form-section">
              <legend>スキルツリー（通常スキルを左右に1つずつ）</legend>
              <% const ranks = ["RK1","RK3","RK5","RK7","RK9","RK11"]; %>
              <% ranks.forEach(rk => { %>
                <div class="row mb-20">
                  <div class="col s12">
                    <h6><strong><%= rk %></strong></h6>
                    <div class="row">
                      <div class="input-field col s6">
                        <select name="<%= rk %>_left">
                          <option value="">なし</option>
                          <% normalSkills.forEach(s => { %>
                            <option value="<%= s.id %>" <%= (character.skillTree?.[rk]?.left || '') === s.id ? 'selected' : '' %>><%= s.name %></option>
                          <% }) %>
                        </select>
                        <label>左スキル</label>
                      </div>
                      <div class="input-field col s6">
                        <select name="<%= rk %>_right">
                          <option value="">なし</option>
                          <% normalSkills.forEach(s => { %>
                            <option value="<%= s.id %>" <%= (character.skillTree?.[rk]?.right || '') === s.id ? 'selected' : '' %>><%= s.name %></option>
                          <% }) %>
                        </select>
                        <label>右スキル</label>
                      </div>
                    </div>
                  </div>
                </div>
              <% }) %>
            </div>

            <div class="form-section">
              <legend>EXスキル（複数選択）</legend>
              <div class="input-field">
                <select name="exSkillIds" multiple>
                  <% exSkills.forEach(s => { %>
                    <option value="<%= s.id %>" <%= (character.exSkillIds || []).includes(s.id) ? 'selected' : '' %>><%= s.name %></option>
                  <% }) %>
                </select>
                <label>EXスキル</label>
              </div>
            </div>

            <div class="row">
              <div class="col s12 text-center">
                <button type="submit" class="btn-large waves-effect waves-light blue">
                  <i class="material-icons left">update</i>更新
                </button>
              </div>
            </div>
          </form>

          <div class="row mt-20">
            <div class="col s12 text-center">
              <form action="/characters/<%= character.id %>/delete" method="post" style="display: inline;">
                <button type="submit" class="btn-large waves-effect waves-light red" onclick="return confirm('削除しますか？')">
                  <i class="material-icons left">delete</i>削除
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <p><a href="/characters">一覧に戻る</a></p> 